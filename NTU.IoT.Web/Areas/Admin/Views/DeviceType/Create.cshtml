@model NTU.IoT.Models.DeviceTypeVM


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Device Type</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="deviceType.name">Name</label>
            <input asp-for="deviceType.name" type="text" class="form-control" />
            <span asp-validation-for="deviceType.name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="deviceType.topic_name"></label>
            <input asp-for="deviceType.topic_name" type="text" class="form-control" />
            <span asp-validation-for="deviceType.topic_name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="deviceType.table_name"></label>
            <input asp-for="deviceType.table_name" type="text" class="form-control" />
            <span asp-validation-for="deviceType.table_name" class="text-danger"></span>
        </div>
        <!--<div class="mb-3">
        <label asp-for="storeInSqlDB"></label>
        <input asp-for="storeInSqlDB" type="checkbox"  />
    </div>-->
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6">
                <a asp-action="Index" asp-controller="DeviceType" class="btn btn-outline-secondary form-control text-dark">Back</a>
            </div>
        </div>
    </div>
</form>